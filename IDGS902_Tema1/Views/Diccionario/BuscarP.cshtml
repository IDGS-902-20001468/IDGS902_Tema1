@model IDGS902_Tema1.Models.Palabras
@{
    ViewBag.Title = "BuscarP";
}

<h2>BuscarP</h2>
<div class="row">

    <div class="form-horizontal col-6">
        @using (Html.BeginForm())
        {

            <div class="form-group">
                <label for="palabra" class="col-form-label">Palabra:</label>
                <input type="text" class="form-control" id="palabra" name="palabra" />
            </div>

            <div class="form-group">
                <label class="form-check-label">A idioma deseas traducir esta palabra: </label>
                <div class="form-check">
                    @Html.RadioButtonFor(model => model.opcion, "Español", new { @class = "form-check-input", id = "opcion1", @checked = "checked" })
                    <label for="opcion1" class="form-check-label">Español</label>
                </div>

                <div class="form-check">
                    @Html.RadioButtonFor(model => model.opcion, "Inglés", new { @class = "form-check-input", id = "opcion2" })
                    <label for="opcion2" class="form-check-label">Inglés</label>
                </div>

            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <br />
                    <input type="submit" name="name" value="Buscar Palabra" class="btn btn-primary text-white" />
                    @Html.ActionLink("Volver", "Diccionario", "Diccionario", new { i = "0" }, new { @class = "btn btn-success" })

                </div>
            </div>

        }
    </div>
    <div class="col-4">
        <h2>@ViewBag.res</h2>
    </div>
</div>

